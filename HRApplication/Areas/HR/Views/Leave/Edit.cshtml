@model HRApplication.Models.Leave

@{
    ViewData["Title"] = "Edit Leave";
}
<form asp-area="HR" asp-action="Edit" method="post">
    <div class="row">
        <div class="col-md-8 offset-2">

            <div class="form-group">
                <label asp-for="LeaveId">Leave Type</label>
                <input asp-for="LeaveId" class="form-control" />
                <span asp-validation-for="LeaveId"></span>
            </div>

            <div class="form-group">
                <label asp-for="LeaveType">Leave Type</label>
                <input asp-for="LeaveType" class="form-control" />
                <span asp-validation-for="LeaveType"></span>
            </div>


            <div class="form-group">
                <label asp-for="NoOfDays">No Of Days</label>
                <input asp-for="NoOfDays" class="form-control" />
                <span asp-validation-for="NoOfDays"></span>
            </div>


            <div class="form-group">
                <label asp-for="Status">Status</label>
                <select asp-for="Status" class="form-control">
                    <option>Select</option>
                    <option value="1">Pending</option>
                    <option value="2">Approved</option>
                    <option value="3">Rejected</option>
                </select>
                <span asp-validation-for="Status"></span>
            </div>

            <div class="form-group">
                <button type="submit" asp-area="HR" asp-action="Edit" class="btn btn-primary">Edit</button>
            </div>
        </div>
    </div>

</form>