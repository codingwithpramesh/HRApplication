@model HRApplication.Models.ViewModel.LoginVM

@{
    ViewData["Title"] = "Login Page";
   
}

<div class="container mx-auto h-50 w-50   justify-content-center">
    <form asp-controller="Register" asp-action="Login" method="post">

        <div class="form-group">
            <label asp-for="UserName" class="form-label">User Name</label>
            <input asp-for="UserName" class="form-control" />

        </div>

        <label asp-for="Password" class="form-label">Password</label>
        <div class="input-group ">
            <input asp-for="Password" type="password" class="form-control" />
            <div class="input-group-append">
                <button><span class="fa fa-eye-slash icon"> </span></</button>
            </div>

        </div>
        <div class="pt-3">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>

    <div>
        <p> If You Haven't  Register Yet <a  asp-action="Register" asp-controller="Register">click Here</a></p>
    </div>
</div>